{
    "threadPoolConfig": {
        "type": "FIXED_POOL",
        "threadCount": 8
    },
    "bridgeServer": {
        "httpPort": 8000,
        "heartbeatRate": 30,
        "crossConnections": true
    },
    "storage": {
        "storageClass": "tk.freaxsoftware.ribbon2.core.data.messagestorage.DBMessageStorage",
        "redeliveryPeriod": 15,
        "topicPattern": "Ribbon.*",
        "storeCalls": true,
        "removeProcessed": false,
        "redeliveryOnlyIfReceiversExists": true
    }
}