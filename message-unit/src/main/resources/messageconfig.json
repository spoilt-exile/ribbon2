{
    "messenger": {
        "enablePermissionCaching": true,
        "permissionCacheExpiry": 5,
        "permissions": [
            {
                "key": "canReadMessage",
                "description": "Allows user to read message",
                "defaultValue": true
            },
            {
                "key": "canCreateMessage",
                "description": "Allows user to create message",
                "defaultValue": false
            },
            {
                "key": "canUpdateMessage",
                "description": "Allows user to update message",
                "defaultValue": false
            },
            {
                "key": "canDeleteMessage",
                "description": "Allows user to delete message",
                "defaultValue": false
            }
        ],
        "propertyTypes": [
            {
                "type": "URGENT",
                "description": "Urgent message mark."
            },
            {
                "type": "MARK",
                "description": "User note or comment."
            },
            {
                "type": "COPYRIGHT",
                "description": "Copyright on message content."
            },
            {
                "type": "RELOCATED",
                "description": "Relocated from directory."
            }
        ]
    },
    "db": {
        "jdbcUrl": "jdbc:postgresql://localhost:5432/ribbon2-messenger",
        "driver": "org.postgresql.Driver",
        "username": "ribbon2",
        "password": "ribbon2"
    }
}